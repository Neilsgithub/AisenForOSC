<resources>
	<style name="ActionBarStyle" parent="@*android:style/Widget.Holo.Light.ActionBar">
		<!-- <item name="android:icon">@drawable/ic_ab_app</item> -->
		<!-- <item name="android:icon">@drawable/title_icon</item> -->
		<!-- <item name="android:progressBarStyle">@style/ActionBarProgress</item> -->
		<item name="android:background">@drawable/bg_actionbar</item>
		<item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
		<item name="android:subtitleTextStyle">@style/ActionBarSubtitleStyle</item>
	</style>
	<style name="ActionBarSubtitleStyle" parent="@*android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
		<item name="android:textColor">@color/ac_subtitle</item>
	</style>
	<style name="ActionBarTitleStyle" parent="@*android:style/TextAppearance.Holo.Widget.ActionBar.Title">
		<item name="android:textColor">@color/ac_title</item>
	</style>
	
	<style name="ATabs.Widget.TabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textAppearance">@style/ATabs.TextAppearance.TabPageIndicator</item>
    </style>
    
	<style name="ATabs.TextAppearance.TabPageIndicator" parent="TextAppearance.TabPageIndicator">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vpi__light_theme</item>
    </style>
    
	<style name="userName">
		<item name="android:textColor">@drawable/main_text</item>
		<item name="android:textSize">16sp</item>
		<item name="android:lineSpacingExtra">4dip</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>
	
	<style name="hintText">
		<item name="android:textColor">@drawable/hint</item>
		<item name="android:textSize">14sp</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>
	
	<style name="hintCounter">
	    <item name="android:textSize">10sp</item>
	    <item name="android:textColor">@drawable/post_counters</item>
	</style>
	
</resources>
