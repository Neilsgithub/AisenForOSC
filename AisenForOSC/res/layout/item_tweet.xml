<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="@dimen/horizontal_margin" android:paddingRight="@dimen/horizontal_margin" android:paddingTop="@dimen/vertical_gap"
  android:paddingBottom="@dimen/vertical_gap">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
		<ImageView android:id="@+id/imgPhoto" android:layout_width="50dip" android:layout_height="50dip" android:layout_marginRight="12dip" />

		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingRight="30dip"
		    android:paddingLeft="62dip">
		    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:id="@+id/txtName" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/userName" android:text="名字"
					android:layout_marginBottom="4dip" android:textStyle="bold" />

		    </LinearLayout>
		    
			<TextView android:id="@+id/txtDesc" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/hintText" android:text="描述" />
		</LinearLayout>
		
		<ImageView android:id="@+id/btnMenus" android:layout_width="40dip" android:layout_height="40dip" android:src="@drawable/ic_card_menu"
		    android:paddingBottom="16dip" android:paddingLeft="16dip" android:layout_alignParentRight="true" />
		
		<TextView android:id="@+id/txtComment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/timeline_comment_dark"
			android:text="100" android:layout_marginRight="-10dip" style="@style/hintCounter" android:drawablePadding="4dip" android:layout_marginTop="0dip"
			android:layout_toLeftOf="@id/btnMenus" android:layout_marginLeft="8dip"/>
    </RelativeLayout>

	<TextView android:id="@+id/txtBody" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@drawable/main_text"
		android:textSize="16sp" android:layout_marginTop="20dip" android:layout_marginBottom="20dip" android:lineSpacingExtra="4dip" />
    
</LinearLayout>
